        // ç”Ÿæˆæ–‡ä»¶ç®¡ç†åŒºåŸŸçš„HTML
        function getFileSectionHTML(subject) {
            const subjectNames = {
                math: 'æ•°å­¦',
                physics: 'ç‰©ç†',Â 
                chemistry: 'åŒ–å­¦',
                biology: 'ç”Ÿç‰©'
            };
           Â 
            return `
                <div class="file-section">
                    <h3 style="color:#ff4757; margin-bottom:20px;">ğŸ“ ${subjectNames[subject]}æ–‡ä»¶ç®¡ç†</h3>
                   Â 
                    <div class="file-upload-area" id="${subject}UploadArea" onclick="document.getElementById('${subject}FileInput').click()">
                        <div style="font-size:3rem; margin-bottom:10px;">ğŸ“¤</div>
                        <p>ç‚¹å‡»æˆ–æ‹–æ‹½æ–‡ä»¶åˆ°æ­¤åŒºåŸŸä¸Šä¼ </p>
                        <p style="font-size:0.8rem; color:#888;">æ”¯æŒPDFã€å›¾ç‰‡ã€æ–‡æ¡£ç­‰æ ¼å¼</p>
                    </div>
                   Â 
                    <input type="file" id="${subject}FileInput" multiple style="display:none;" onchange="handleFileUpload('${subject}', this.files)">
                   Â 
                    <div class="file-list" id="${subject}FileList">
                        <p style="color:#888; text-align:center;">æš‚æ— æ–‡ä»¶</p>
                    </div>
                </div>
            `;
        }

        function openNote(type) {
            document.getElementById('modal-text').innerHTML = notesData[type];
            document.getElementById('modal').style.display = 'block';
            document.body.style.overflow = 'hidden';
           Â 
            // åˆå§‹åŒ–æ–‡ä»¶åŒºåŸŸ
            setTimeout(() => initFileSection(type), 100);
        }

        function closeNote() {
            document.getElementById('modal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // åˆå§‹åŒ–æ–‡ä»¶åŒºåŸŸ
        function initFileSection(subject) {
            const uploadArea = document.getElementById(`${subject}UploadArea`);
            const fileList = document.getElementById(`${subject}FileList`);
           Â 
            if (uploadArea) {
                setupDragAndDrop(uploadArea, subject);
            }
           Â 
            displayFiles(subject);
        }

        // è®¾ç½®æ‹–æ‹½åŠŸèƒ½
        function setupDragAndDrop(uploadArea, subject) {
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });
           Â 
            uploadArea.addEventListener('dragleave', function() {
                uploadArea.classList.remove('dragover');
            });
           Â 
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                handleFileUpload(subject, e.dataTransfer.files);
            });
        }

        // å¤„ç†æ–‡ä»¶ä¸Šä¼ 
        function handleFileUpload(subject, files) {
            if (files.length === 0) return;
           Â 
            Array.from(files).forEach(file => {
                if (file.size > 10 * 1024 * 1024) {
                    alert('æ–‡ä»¶å¤§å°ä¸èƒ½è¶…è¿‡10MB');
                    return;
                }
               Â 
                const reader = new FileReader();
                reader.onload = function(e) {
                    const newFile = {
                        id: Date.now() + Math.random(),
                        name: file.name,
                        type: file.type,
                        size: formatFileSize(file.size),
                        uploadTime: new Date().toLocaleString(),
                        data: e.target.result
                    };
                   Â 
                    subjectFiles[subject].push(newFile);
                    localStorage.setItem(`${subject}Files`, JSON.stringify(subjectFiles[subject]));
                    displayFiles(subject);
                };
                reader.readAsDataURL(file);
            });
        }

        // æ˜¾ç¤ºæ–‡ä»¶åˆ—è¡¨
        function displayFiles(subject) {
            const fileList = document.getElementById(`${subject}FileList`);
            const files = subjectFiles[subject];
           Â 
            if (!fileList) return;
           Â 
            if (files.length === 0) {
                fileList.innerHTML = '<p style="color:#888; text-align:center;">æš‚æ— æ–‡ä»¶</p>';
                return;
            }
           Â 
            fileList.innerHTML = files.map(file => `
                <div class="file-item">
                    <div class="file-name">
                        <span class="file-icon">${getFileIcon(file.type)}</span>
                        <div>
                            <div>${file.name}</div>
                            <div style="font-size:0.8rem; color:#888;">${file.size} â€¢ ${file.uploadTime}</div>
                        </div>
                    </div>
                    <div class="file-actions">
                        <button onclick="viewFile('${subject}', '${file.id}')">æŸ¥çœ‹</button>
                        <button onclick="downloadFile('${subject}', '${file.id}')" style="background:#666;">ä¸‹è½½</button>
                        <button onclick="deleteFile('${subject}', '${file.id}')" style="background:#ff4757;">åˆ é™¤</button>
                    </div>
                </div>
            `).join('');
        }

        // è·å–æ–‡ä»¶å›¾æ ‡
        function getFileIcon(fileType) {
            if (fileType.includes('pdf')) return 'ğŸ“„';
            if (fileType.includes('image')) return 'ğŸ–¼ï¸';
            if (fileType.includes('word') || fileType.includes('document')) return 'ğŸ“';
            if (fileType.includes('sheet') || fileType.includes('excel')) return 'ğŸ“Š';
            return 'ğŸ“';
        }

        // æ ¼å¼åŒ–æ–‡ä»¶å¤§å°
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // æŸ¥çœ‹æ–‡ä»¶
        function viewFile(subject, fileId) {
            const file = subjectFiles[subject].find(f => f.id == fileId);
            if (!file) return;
           Â 
            if (file.type.includes('image') || file.type.includes('pdf')) {
                window.open(file.data, '_blank');
            } else {
                downloadFile(subject, fileId);
            }
        }

        // ä¸‹è½½æ–‡ä»¶
        function downloadFile(subject, fileId) {
            const file = subjectFiles[subject].find(f => f.id == fileId);
            if (!file) return;
           Â 
            const link = document.createElement('a');
            link.href = file.data;
            link.download = file.name;
            link.click();
        }

        // åˆ é™¤æ–‡ä»¶
        function deleteFile(subject, fileId) {
            if (confirm('ç¡®å®šè¦åˆ é™¤è¿™ä¸ªæ–‡ä»¶å—ï¼Ÿ')) {
                subjectFiles[subject] = subjectFiles[subject].filter(f => f.id != fileId);
                localStorage.setItem(`${subject}Files`, JSON.stringify(subjectFiles[subject]));
                displayFiles(subject);
            }
        }

        // ç‚¹å‡»èƒŒæ™¯å…³é—­å¼¹çª—
        window.onclick = function(e) {
            if (e.target == document.getElementById('modal')) closeNote();
        }
    </script>
